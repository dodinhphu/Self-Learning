{{#section 'css'}}
<link rel="stylesheet" href="/css_customer/css_body/authentication/register.css">
{{/section}}

{{#section 'title'}}Đăng Ký{{/section}}

{{#section 'javascript'}}
<script src="/js/register/register.js"></script>
{{/section}}

<div class="all-register container-fluid">
    <div class="row no-gutter">
        <div class="col-md-6 d-none d-md-flex bg-image"></div>
        <div class="col-md-6 bg-light">
            <div class="register d-flex ">

                <!-- Demo content-->
                <div class="container">
                    <div id="toan_rgt" class="row">

                        <h4 style=" text-align:center" class="display-6">Self Learning</h4>
                        <br>
                        <div id="tb_dk" style="margin-top: 8px;" class="" role="alert">
                        </div>

                        <form action="/authentication/register" method="POST" id="register_form">
                            <div class="form_item">
                                <label for="validationDefault01">Email</label>
                                <input id="txt_email" type="email" class="form-control inpux_dk" Name="email"
                                    placeholder="Email">
                            </div>
                            <div class="form_item">
                                <label for="validationDefault01">Họ Và Tên</label>
                                <input id="txt_fullname" type="text" class="form-control inpux_dk" name="fullname"
                                    placeholder="Họ Và Tên">
                            </div>
                            <div class="form_item">
                                <label for="validationDefault01">Địa Chỉ</label>
                                <input id="txt_address" type="text" class="form-control inpux_dk" name="address"
                                    placeholder="Địa Chỉ">
                            </div>
                            <div class="form_item">
                                <label for="validationDefault01">Số Điện Thoại</label>
                                <input id="txt_numberphone" type="text" class="form-control inpux_dk" name="numberPhone"
                                    placeholder="Số Điện Thoại">
                            </div>
                            <div class="form_item">
                                <label for="validationDefault01">Loại Người Dùng</label>
                                <select id="txt_type" name="type" class="form-select inpux_dk"
                                    aria-label="Default select example">
                                    <option value="1">Giáo Viên</option>
                                    <option value="2">Học Sinh</option>
                                </select>
                            </div>
                            <div class="form_item">
                                <label for="validationDefault01">Mật Khẩu</label>
                                <input type="Password" class="form-control inpux_dk" name='password' id="txt_password"
                                    placeholder="Mật Khẩu">

                                <label class="tb_register"></label>

                            </div>
                            <div class="form_item">
                                <label for="validationDefault01">Xác Nhận Mật Khẩu</label>
                                <input type="Password" class="form-control inpux_dk" name='confirmpassword'
                                    placeholder="Xác Nhận Mật Khẩu">

                                <label class="tb_register"></label>

                            </div>
                            <button id="btn_register" type="submit"
                                class="btn btn-success btn-register">Đăng Ký</button>
                        </form>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>