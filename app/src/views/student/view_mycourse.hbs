{{#section 'css'}}
<link rel="stylesheet" href="/css_customer/css_body/home/home.css">
{{/section}}

{{#section 'title'}}Khóa Học Của Tôi{{/section}}
{{#section 'javascript'}}
<script src="/js/lesson/lesson.js"></script>
{{/section}}
{{#section 'mycourse_active'}}
active
{{/section}}

<div class="body">
    <div id="tong" style="background-color: #e2e2e2;" class="container-fluid">
        {{#if data}}
        <div id="co" class="row">
            <div class="title_mc">
                Khóa Học Của Tôi
            </div>
            {{#each data}}
            <div id="{{this.course_id}}" class="col-lg-3  toan_khoa">
                <div class="card shadow-lg">
                    <a class="link_khoa_hoc" href="/course/{{this.course_id}}/details">
                        <img src="/upload/{{this.course_img}}" class="card-img-top" alt="reactjs">
                        <div class="card-body card_nd">
                            <h6 class="ten_khoahoc">{{this.course_name}}</h6>
                            <div class="nguoihoc">
                                <i class="icon_cardkh fas fa-users"></i>
                                <p class="chu_trd">{{this.course_member.length}}
                                </p>
                            </div>
                            <div class="nguoi_day">
                                <i class="icon_cardkh fas fa-user-graduate"></i>
                                <p class="chu_trd">{{ this.name }}</p>
                            </div>
                            <div class="soluongvideo">
                                <i class="icon_cardkh fas fa-video"></i>
                                <p class="chu_trd"> {{this.course_lesson.length}}/{{this.course_lesson.length}}
                                </p>
                            </div>
                            <div class="price_kh">
                                <i style="align-self: center;" class="icon_cardkh fa-solid fa-money-check-dollar"></i>
                                <p class="chu_trd txt_gia">
                                    {{#if (check_gia this.course_price) }}
                                    Free
                                    {{else}}
                                    {{this.course_price}}đ
                                    {{/if}}
                                </p>
                            </div>
                        </div>
                    </a>
                    <div class="huykh">
                        <button onclick="thoatlop('{{this.course_id}}')" type="button" class="btn btn-danger">
                            Thoát Khóa Học
                        </button>
                    </div>
                </div>

            </div>
            {{/each}}
        </div>
        {{else}}
        {{!--trống --}}
        <div class="chuadkkh">
            <h6>Rât tiết !! Bạn chưa tham gia khóa học nào</h6>
            <div class="dkn">
                <a href="/home">
                    <button type="button" class="btn btn-primary">Đi đến các khóa học</button>
                </a>
            </div>
        </div>
        {{/if}}
    </div>
</div>