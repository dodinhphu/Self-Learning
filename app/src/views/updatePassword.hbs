{{#section 'css'}}
<link rel="stylesheet" href="/css_customer/css_body/forgotPassword/forgotpassword.css">
{{/section}}

{{#section 'title'}}Update Password{{/section}}

{{#section 'javascript'}}
<script src="/js/updatePassword/updatePassword.js"></script>
{{/section}}

<div style="margin: 20px 0;" class="container-fluid">
    <div class="row no-gutter">
        <!-- The image half -->
        <div class="col-md-6 d-none d-md-flex bg-image"></div>


        <!-- The content half -->
        <div class="col-md-6 bg-light">
            <div class="login d-flex align-items-center py-5">

                <!-- Demo content-->
                <div class="container">
                    <div class="row">
                        <div id="tong_tren" class="col-lg-10 col-xl-7 mx-auto">
                            <h4 class="display-4">Forgot Password</h4>
                            <br>
                            <div id="tb_tong_rsmk" class="alert alert-danger" role="alert">

                            </div>
                            <form id="toankhung">
                                <div class="form-group mb-3">
                                    <input name="password" onfocus="an()" id="newpassword" type="password"
                                        placeholder="New Password"
                                        class="form-control rounded-pill border-0 shadow-sm px-4 text-primary">
                                    <span id="tb_newpw" class="text_tb"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <input name="confirmpassword" onfocus="an()" id="check_newpassword" type="password"
                                        placeholder="Confirm Password"
                                        class="form-control rounded-pill border-0 shadow-sm px-4 text-primary">
                                    <span id="tb_checknewp" class="text_tb"> </span>
                                </div>
                                <div class="btn_rsmk">
                                    <button id="changepass" type="submit"
                                        class="btn btn-primary btn-block text-uppercase mb-2 rounded-pill shadow-sm">
                                        Change
                                    </button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div><!-- End -->

            </div>
        </div><!-- End -->

    </div>
</div>