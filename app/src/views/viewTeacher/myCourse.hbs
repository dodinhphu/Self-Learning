{{#section 'css'}}
<link rel="stylesheet" href="/css_customer/css_body/home/home.css">
{{/section}}

{{#section 'title'}}My Class{{/section}}
{{#section 'javascript'}}
<script src="/js/teacher/teacher.js"></script>
{{/section}}
{{#section 'myclass_active'}}
active
{{/section}}

<div class="body">
    <div style="background-color: #e2e2e2;" class="container-fluid">
        {{#if data}}
        <div class="row">
            <div style="text-align: center;">
                <a href="/teacher/createcourse">
                    <button id="btn_taokhoahoc">Thêm Khóa Học Mới</button>
                </a>
            </div>
            {{#each data}}
            <div id="{{this.course_id}}" class="col-lg-3  toan_khoa">
                <div class="card shadow-lg">
                    <img src="/upload/{{this.course_img}}" class="card-img-top" alt="reactjs">
                    <div class="card-body card_nd">
                        <h6 class="ten_khoahoc">{{this.course_name}}</h6>
                        <div class="nguoihoc">
                            <i class="icon_cardkh fas fa-users"></i>
                            <p class="chu_trd">{{this.course_member.length}}
                            </p>
                        </div>
                        <div class="nguoi_day">
                            <i class="icon_cardkh fas fa-user-graduate"></i>
                            <p class="chu_trd">{{ this.name }}</p>
                        </div>
                        <div class="soluongvideo">
                            <i class="icon_cardkh fas fa-video"></i>
                            <p class="chu_trd"> {{this.course_lesson.length}}/{{this.course_lesson.length}}
                            </p>
                        </div>
                        <div class="price_kh">
                            <i style="align-self: center;" class="icon_cardkh fa-solid fa-money-check-dollar"></i>
                            <p class="chu_trd txt_gia">
                                {{#if (check_gia this.course_price) }}
                                Free
                                {{else}}
                                {{this.course_price}}đ
                                {{/if}}
                            </p>
                        </div>
                    </div>
                    <div class="btn_mycourse">
                        <a href="/teacher/{{this.course_id}}/detailsclass">
                            <button type="button" class="btn btn-success">Chi Tiết</button>
                        </a>
                        <a href="/teacher/{{this.course_id}}/updatecourse">
                            <button type="button" class="btn btn-success">Chỉnh Sửa</button>
                        </a>
                        {{#if (sosanh this.course_member.length 0)}}
                        <button onclick="xoa_course('{{this.course_id}}')" type="button" class="btn btn-danger">
                            Xóa
                        </button>
                        {{/if}}
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{else}}
        {{!--trống --}}
        <div class="row">
            <div style="text-align: center;">
                <a href="/teacher/createcourse">
                    <button id="btn_taokhoahoc">Thêm Khóa Học Mới</button>
                </a>
            </div>
            <h1 style="padding: 80px 0;text-align: center;">Không có khóa học</h1>
        </div>
        {{/if}}
    </div>
</div>